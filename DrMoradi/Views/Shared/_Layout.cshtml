<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <title>رژیم آنلاین دکتر مرادی</title>
    <link rel="stylesheet" href="~/MyFile/dist/css/adminlte.min.css">
    <!-- لینک به CSS بوت‌استرپ -->

    <link href="~/css/swiper.css" rel="stylesheet" />
    <link href="~/myfile/dist/css/custom-style.css" rel="stylesheet" />
  
    <link rel="icon" type="image/png" href="~/FileUpload/Slider/logo-m.png">
    <link href="~/css/bootstrap5.3.0.css" rel="stylesheet" />
    <link href="~/css/maincss.css" rel="stylesheet" />
    @await RenderSectionAsync("style", false)

</head>
<body>

    @await Component.InvokeAsync("PopUpComponent")
    <!-- هدر و ناوبار -->
    <!-- HTML –– درون <body> -->
    @await Component.InvokeAsync("NavbarComponent")
    <section style="padding-top:80px">
    @RenderBody()
    </section>







    <!-- فوتر -->
    <partial name="_SiteFooter" />

    <partial name="_footerlink" />
    <partial name="_Message" />
    <!-- اسکریپت‌های مورد نیاز بوت‌استرپ -->
    <script src="~/js/bootstrap5.3.0.js"></script>
    <script src="~/js/swipper.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/mainjs.js"></script>
    <script>
                function openPopup() {
          document.getElementById('popup').style.display = 'block';
        }

        function closePopup() {
          document.getElementById('popup').style.display = 'none';
        }

        // اگر بخوای پاپ‌آپ بلافاصله با ورود کاربر نمایش داده بشه:
        window.onload = function () {
          openPopup();
        }
    </script>
</body>
</html>
