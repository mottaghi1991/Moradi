@using Core.Dto.ViewModel.Dr

@model ShowPostDetailvm
@{
    ViewData["Title"] = "blogDetails";
}
<section class="position-relative py-5 " style="background-color: #f8f9fa;">
    <div class="container">
        <div class="row my-4 justify-content-center">
            <div class="col-12">
                <div class="section-title text-center">
                    <h3 class="sub-title mb-4">
                        @Model.post.Title                    </h3>
                    <ul class="list-unstyled mt-4">
                        <li class="list-inline-item user text-muted ms-3">
                            <i class="mdi mdi-eye"></i>
                            33 <span>بازدید</span>
                        </li>
                        <li class="list-inline-item date text-muted">
                            <i class="mdi mdi-calendar-check"></i>
                            پنج‌شنبه, 19 تیر 1404
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- موج پایین سکشن -->
    <svg class="position-absolute bottom-0 start-0 w-100" height="60" viewBox="0 0 1200 60" preserveAspectRatio="none">
        <path d="M0,0 C200,50 1000,10 1200,40 L1200,60 L0,60 Z" fill="#f8f9fa"></path>
    </svg>
</section>


<section class="section my-5">
    <div class="container">
        <div class="row g-4">
            <!-- محتوای اصلی -->
            <div class="col-lg-8 col-md-7 mt-5">
                <img class="img-fluid shadow w-100 mb-5" src="@Model.post.Image" />
                <span>  @Html.Raw(Model.post.Descript) </span>
            </div>
            <div class="col-lg-4 col-md-5">
                <!-- کارت سایدبار -->
                <div class="card border rounded-3 shadow-sm p-3 position-sticky" style="top: 150px;" >
                    <!-- جستجو -->
                    <div class="mb-4">
                        <h5 class="mb-3 fw-bold">جستجو</h5>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0">
                                <i class="bi bi-search"></i>
                            </span>
                            <input type="text" class="form-control border-start-0" placeholder="جستجو کلیدواژه...">
                        </div>
                    </div>

                    <!-- مطالب پربازدید -->
                    <div class="sidebar-widget">
                        <h5 class="mb-3 fw-bold">مطالب پربازدید</h5>
                        <ul class="list-unstyled">
                      @foreach(var item in Model.TopPost)
                            {
                                <li class="d-flex mb-3">
                                    <img src="@item.Image" alt="@item.Title" class="flex-shrink-0 me-2 rounded" width="60" height="60">
                                    <div>
                                        <a href="blogDetails/@item.Id" class="d-block mb-1 fw-semibold text-decoration-none text-dark">
                                            @item.Title
                                        </a>
                                        <small class="text-muted">یکشنبه، 19 تیر 1401</small>
                                    </div>
                                </li>
                            }
                         

                           

                          
                        </ul>
                    </div>
                </div>
            </div>


        </div>
    </div>
</section>


<section class="pt-5 container">
    <div class="card" style="border:none;background-color:#F9F9F9">
        <div class="card-header" style="border:none;background-color:#F9F9F9">
            <h3 class="fw-bold text-start">
                 مقالات مرتبط
            </h3>
        </div>
        @await Component.InvokeAsync("PostComponent")
    </div>
</section>