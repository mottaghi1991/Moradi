@model Domain.Shop.Product
@{
    ViewData["Title"] = "ProductDetail";
}

@section style {
    <style>
        .product-image-main {
            border-radius: 10px;
            overflow: hidden;
        }

        .thumbnail-images img {
            cursor: pointer;
            border: 2px solid transparent;
            border-radius: 8px;
        }

            .thumbnail-images img.active {
                border-color: #0d6efd;
            }

        .price {
            color: #0d6efd;
            font-size: 1.2rem;
            font-weight: bold;
        }

        .carousel-control-prev {
            right: 0;
            left: auto;
        }

        .carousel-control-next {
            left: 0;
            right: auto;
        }

        .shadow-strong {
            box-shadow: 0 8px 20px rgba(0,0,0,0.15); /* سایه نرم و عمیق */
            border-radius: 10px;
        }

            .shadow-strong:hover {
                box-shadow: 0 10px 28px rgba(0,0,0,0.18); /* افکت hover برای جلوه بهتر */
            }
    </style>
}
<div class="container  my-5">
    <div class="row m-4 align-items-stretch">

        <!-- بخش تصویر محصول -->
        <div class="col-lg-6 product-column shadow-strong d-flex flex-column">
            <div id="productCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/FileUpload/Product/fe519349_ebf36d5e.jpg" class="d-block w-100" alt="کینوا">
                    </div>
                    <div class="carousel-item">
                        <img src="/FileUpload/Product/c402822b_83a04de9.jpg" class="d-block w-100" alt="کینوا 2">
                    </div>
                </div>
                <!-- دکمه "عقب" در سمت راست -->
                <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>

                <!-- دکمه "جلو" در سمت چپ -->
                <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>

            <div class="d-flex justify-content-center gap-2 mt-3 thumbnail-images">
                <img src="/FileUpload/Product/fe519349_ebf36d5e.jpg" class="active" width="80" alt="">
                <img src="/FileUpload/Product/c402822b_83a04de9.jpg" width="80" alt="">
            </div>
        </div>

        <!-- بخش اطلاعات محصول -->
        <div class="col-lg-6 product-column  p-4 rounded shadow-strong d-flex flex-column ml-3">
            <h4 class="mb-3">@Model.ProductName</h4>
            <div class="price mb-2">@Model.Price تومان</div>
            <div class="mb-3">
                <span class="text-warning">&#9733;&#9733;&#9733;&#9733;&#9733;</span>
                <span class="text-muted">(0 نظر)</span>
            </div>

            <h6 class="fw-bold">توضیحات محصول:</h6>
            <p style="text-align: justify; font-size: 0.9rem;">
                @Html.Raw(Model.Attrib)
            </p>

            <!-- انتخاب تعداد -->
            <div class="d-flex align-items-center mb-3">
                <label class="me-2 mb-0">تعداد موجودی (@Model.Stock عدد):</label>
                <div class="input-group w-auto">
                    <button class="btn btn-danger" type="button" id="decrease">-</button>
                    <input type="number" class="form-control text-center" id="quantity" value="1" style="width:70px;">
                    <button class="btn btn-success" type="button" id="increase">+</button>
                </div>
            </div>

            <!-- دکمه ها -->
            <div class="d-flex gap-2">
                <button class="btn btn-primary flex-fill" data-product-id="@Model.Id"
                        data-quantity="1">
                    افزودن به سبد خرید
                </button>
                <button class="btn btn-outline-secondary">مشاهده سریع</button>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="/js/shop/shoporder.js"></script>
}

