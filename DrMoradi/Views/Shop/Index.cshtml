@model IEnumerable<Domain.Shop.Product>
@{
    ViewData["Title"] = "محصولات";
}
@section style{
    <style>
        .unstyled-link {
            all: unset; /* همه استایل‌های ارث‌بری و پیش‌فرض مرورگر رو پاک می‌کنه */
            cursor: pointer; /* چون all: unset اینو هم حذف می‌کنه، دوباره ستش می‌کنیم */
        }

    </style>
}
<div class="container mt-4">
    <div class="row justify-content-center text-center">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card mt-4">
                    <div style="border:none">
                        <img src="@item.ImageUrl" class="img-fluid" style="border-radius:50px;width:250px;max-width:100%;height:auto" alt="@item.ProductName">
                    </div>
                    <!-- بخش متن و دکمه -->
                    <div class="card-body">
                        <h5 class="text-center"><a class="unstyled-link" asp-action="ProductDetail" asp-route-ProductId="@item.Id">@item.ProductName</a></h5>
                        <p class="plan-price text-center">
                            <span>@item.Price</span> تومان
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

