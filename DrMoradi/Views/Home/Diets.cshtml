@model IEnumerable<Domain.Dr.Diet>
@{
    ViewData["Title"] = "رژیم ها";
}

<div class="container mt-4">
    <div class="row justify-content-center text-center">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card mt-4" style="background-color:#F9F9F9;border:none">
                    <div class="card-header" style="border:none">
                        <img src="@item.Image" class="img-fluid" style="border-radius:50px;width:250px;max-width:100%;height:auto" alt="@item.Name">
                    </div>
                    <!-- بخش متن و دکمه -->
                    <div class="card-body">
                        <h5 class="text-center">@item.Name</h5>
                        <p class="plan-price text-center">
                            <span>@item.Price</span> تومان
                        </p>
                        <a asp-action="DietDetail" asp-area="" asp-controller="Home" asp-route-DietId="@item.Id" class="plan-btn" style="background-color:#506180">ثبت سفارش</a>
                        @* <a asp-action="Notfound" asp-area="" asp-controller="Home"  class="plan-btn" style="background-color:#506180">ثبت سفارش</a> *@
                    </div>
                </div>
            </div>
        }
    </div>
</div>


