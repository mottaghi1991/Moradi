@section Scripts {
    <script>
        $(document).ready(function () {
            $("#commentForm").on("submit", function (e) {
                e.preventDefault(); // نذاره فرم عادی ارسال بشه

                // جلوگیری از ارسال در صورت نامعتبر بودن
                if (!this.checkValidity()) {
                    this.reportValidity();
                    return;
                }

                $.ajax({
                    url: '@Url.Action("SubmitComment", "Home")',
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (res) {
                        $("#resultMessage")
                            .removeClass()
                            .addClass(res.success ? "alert alert-success" : "alert alert-danger")
                            .text(res.message)
                            .fadeIn();

                        if (res.success) {
                            $("#commentForm")[0].reset(); // پاک کردن فرم
                        }
                    },
                    error: function () {
                        $("#resultMessage")
                            .removeClass()
                            .addClass("alert alert-danger")
                            .text("مشکلی در ارسال فرم رخ داد")
                            .fadeIn();
                    }
                });
            });
        });
    </script>
