@using Domain
@model Core.Dto.ViewModel.Dr.DietVm.ShowDietDetailVm
@{
    ViewData["Title"] = "DietDetail";
}
@section style{
    <style>
        .comment-thread .comment-box {
            border-radius: 8px;
            box-shadow: 0 1px 2px rgba(0,0,0,0.05);
        }

            .comment-thread .comment-box p {
                margin-bottom: .5rem;
            }

            .comment-thread .comment-box small {
                font-size: .75rem;
            }

        .comment-thread .level-0 {
            background-color: #fff;
        }

        .comment-thread .level-1 {
            background-color: #f8f9fa;
        }

        .comment-thread .level-2 {
            background-color: #f4f8fb;
        }

        .comment-thread .border-start {
            border-color: #dce1e6 !important;
            min-height: 100%; /* خط تا انتهای کامنت */
        }

        .comment-thread .shadow-sm {
            box-shadow: 0 1px 2px rgba(0,0,0,0.05);
        }
        .ps-level-1 {
            padding-right: 1.5rem;
        }

        .ps-level-2 {
            padding-right: 3rem;
        }

        .ps-level-3 {
            padding-right: 4.5rem;
        }

    </style>
}
<div class="row m-4 container">
    <div class="col-md-6 text-center">
        <img src="@Model.diet.Image" class="align-content-start" />

    </div>
    <div class="col-md-6">
        <h3>@Model.diet.Name</h3>
        <hr />
        قیمت:@(Model.diet.Price/10)
        <hr />
        <h3> توضیحات:  </h3>
        <br />
        <p>@Model.diet.Descript  </p>
        <br />
        <a class="btn btn-primary" asp-action="Index" asp-controller="UserDiet" asp-area="UserPanel" asp-route-DietId="@Model.diet.Id">ثبت درخواست</a>



    </div>
</div>



<div class="row justify-content-center">
    <div class="col-12 col-md-6">
        <div class="ratio ratio-16x9">
            <iframe src="https://www.aparat.com/video/video/embed/videohash/sg0oe/vt/frame"
                    allowfullscreen
                    webkitallowfullscreen
                    mozallowfullscreen>
            </iframe>
        </div>
    </div>
</div>
<div class="container">
@await Component.InvokeAsync("DietComponent")
</div>
<div class="row m-4">
    <div class="container-fluid d-flex justify-content-center align-items-center">
        <div class="col-12">
            <div class="bg-light p-3 rounded shadow-sm mb-3">
                <div class="fw-bold mb-3">ثبت نظر</div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form id="commentForm">
                            <label class="label">نظر دهید</label>
                            <textarea name="message" class="form-control" rows="6" required oninvalid="this.setCustomValidity('لطفاً پیام خود را وارد کنید')"
                                  oninput="this.setCustomValidity('')"></textarea>
                                  <input type="hidden" name="Id" value="@Model.diet.Id" />
                            <input type="submit" class="btn btn-outline-success mt-3" value="ثبت" />

                        </form>
                        <div id="resultMessage" class="mt-3" style="display:none;"></div>
                    }
                    else
                    {
                        <label class="badge badge-danger">
                            برای ثبت نظر یا پاسخ وارد پنل کاربری شوید
                            <a href="/SmsLogin" class="btn btn-success">ورود</a>
                        </label>
                    }
                    <div class="container-fluid mt-4">
                    <div class="bg-light p-3 rounded shadow-sm mb-3">
                        <div class="fw-bold mb-3">نظرات</div>
                          
                                <!-- یک نظر -->
                                <!-- نظر اصلی -->
                                @await Component.InvokeAsync("InsertComment", new { entityId = Model.diet.Id, entityType = EntityType.Diet })

       
                         
                        </div>
                    </div>
              
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#commentForm").on("submit", function (e) {
                e.preventDefault(); // نذاره فرم عادی ارسال بشه

                // جلوگیری از ارسال در صورت نامعتبر بودن
                if (!this.checkValidity()) {
                    this.reportValidity();
                    return;
                }

                $.ajax({
                    url: '@Url.Action("SubmitComment", "Home")',
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (res) {
                        $("#resultMessage")
                            .removeClass()
                            .addClass(res.success ? "alert alert-success" : "alert alert-danger")
                            .text(res.message)
                            .fadeIn();

                        if (res.success) {
                            $("#commentForm")[0].reset(); // پاک کردن فرم
                        }
                    },
                    error: function () {
                        $("#resultMessage")
                            .removeClass()
                            .addClass("alert alert-danger")
                            .text("مشکلی در ارسال فرم رخ داد")
                            .fadeIn();
                    }
                });
            });
        });
    </script>
}
