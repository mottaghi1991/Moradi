@using Core.Dto.ViewModel.Admin.Role
@using Domain.User.Permission
@model Core.Dto.ViewModel.Admin.Role.EditPermissionRoleVm





@{
    IEnumerable<PermissionList> Permissions = ViewBag.PermssionList as IEnumerable<PermissionList>;
}
<div class="card card-primary">
    <div class="card-header">
        @Model.RoleName
    </div>
    <div class="card-body">
        <form asp-action="RolePermission">
            <input type="hidden" asp-for="RoleId" />
            <div class="row">
                @foreach (var permission in Permissions.Where(a => a.ParentId == 0))
                {
                    <div class="col-md-6" style="padding-bottom: 25px">
                        <div class="card">
                            <div class="card-body" style="height: 250px; overflow-y: auto">
                                <li style="color: red">
                                    <input type="checkbox" name="PermissionList" value="@permission.Id" @((Model.MenuVm.Any(r => r.PermissionListId == permission.Id) ? "checked" : "")) />

                                    @permission.Descript
                                </li>
                                @if (Permissions.Any(p => p.ParentId == permission.ParentId))
                                {
                                    <ul style="padding-right: 20px">
                                        @foreach (var sub in Permissions.Where(a => a.ParentId == permission.Id))
                                        {
                                            <li style="font-weight: 500">
                                                <input type="checkbox" name="PermissionList" value="@sub.Id" @((Model.MenuVm.Any(r => r.PermissionListId == sub.Id) ? "checked" : "")) />
                                                @sub.Descript
                                            </li>
                                            if (Permissions.Any(p => p.ParentId == sub.ParentId))
                                            {
                                                <ul style=" padding-right:20px">
                                                    @foreach (var sub2 in Permissions.Where(a => a.ParentId == sub.Id))
                                                    {
                                                        <li>
                                                            <input type="checkbox" name="PermissionList" value="@sub2.Id" @((Model.MenuVm.Any(r => r.PermissionListId == sub2.Id) ? "checked" : "")) />
                                                            @sub2.Descript
                                                        </li>
                                                    }
                                                </ul>
                                            }

                                        }
                                    </ul>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
            <input type="submit" class="btn btn-success" value="ثبت">
        </form>

    </div>
</div>
