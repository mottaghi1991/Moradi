@model Core.Dto.ViewModel.main.ShowCommentVm
@{
    ViewData["Title"] = "ReplyComment";
}

<div class="col-md-12">
    <div class="card card-success">
        <div class="card-header">
            <h3 class="card-title">پاسخ نظرات</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="ReplyComment" id="myform">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="DietId" type="hidden" />
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label  class="control-label">شماره موبایل</label>
                                    <input asp-for="Mobile" class="form-control" readonly />
                                    <span asp-validation-for="Mobile" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">دسته بندی</label>
                                    <input value="@(Model.EntityType)" class="form-control" readonly />
                                    <span asp-validation-for="EntityType" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">تاریخ ثبت</label>
                                    <input asp-for="CreateDate" class="form-control" readonly />
                                    <span asp-validation-for="CreateDate" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">وضعیت</label>
                                    <select asp-for="IsApproved" class="form-control" >
                                        <option value="">لطفا یک گزینه را انتخاب کنید</option>
                                        <option value="true">تایید</option>
                                        <option value="false">عدم تایید</option>
                                        </select>
                                    <span asp-validation-for="IsApproved" class="text-danger"></span>

                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="UserComment" class="control-label"></label>
                            <textarea asp-for="UserComment" class="form-control" rows="5" readonly></textarea>


                        </div>
                        <div class="form-group">
                            <label asp-for="AdminComment" class="control-label"></label>
                            <textarea asp-for="AdminComment" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="AdminComment" class="text-danger"></span>

                        </div>
                        <div class="row">
                            <input type="submit" value="ثبت" class="btn btn-success" />
                            <a asp-action="index"  class="btn btn-primary mr-2">بازگشت به لیست</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


