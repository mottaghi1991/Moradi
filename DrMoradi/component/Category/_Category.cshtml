@model IEnumerable<Domain.DrShop.Category>
@{
    var index = 0;
}
<div class="card" style="border:none;background-color:#F9F9F9">
    <div class="card-header" style="border:none;background-color:#F9F9F9">
        <h3 class="fw-bold text-start">دسته بندی محصولات</h3>
    </div>
    <div class="card-body">
        <div class="swiper mySwiper">
            <div class="swiper-wrapper">
                @foreach(var item in Model)
                {
                    <div class="swiper-slide">

                        <div class="card" style="background-color:#F8F9FC;">
                            <div class="card-header p-0" style="border:none; overflow:hidden; background:none;">
                                <img src="@item.Image"
                                     style="width:300px;max-width:100%; display:block; height:auto; border-radius:0;"
                                     alt="@item.CategoryName">
                            </div>
                            <div class="card-body">
                                <h5 class="text-center card-title-fixed">@item.CategoryName</h5>
                                <button class="plan-btn">لیست محصولات</button>
                            </div>
                        </div>

                    </div>
                }
           
           
              
            
        
            

            </div>
            <!-- دکمه‌های ناوبری -->
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
            <!-- نقاط -->
            <div class="swiper-pagination"></div>
        </div>

    </div>
</div>